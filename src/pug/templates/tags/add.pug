form#tag_add(accept-charset="utf-8")
  fieldset
    legend Add Tag
    .input.text
      label(for="title") Title
      input#title(type="text" name="title" maxlength="255")
    .input.select
      label(for="bookmarks-ids") Bookmarks
      select#bookmarks-ids(name="bookmark_ids[]" multiple="multiple")
        <% _.each(bookmarks, function(bookmark) { %>
        option(value!="<%= bookmark.attributes.id %>") <%= bookmark.attributes.title %>
        <% }); %>
  button(type="submit") Submit