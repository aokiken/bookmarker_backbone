h3 <%= tag.attributes.title %>
table.vertical-table
  tbody
    tr
      th Title
      td <%= tag.attributes.title %>
    tr
      th Id
      td <%= tag.attributes.id %>
    tr
      th Created
      td <%= tag.dateFormat("created") %>
    tr
      th Modified
      td <%= tag.dateFormat("modified") %>
.related
  h4 Related Bookmarks
  <% if(tag.attributes.bookmarks.length){ %>
  table(cellpadding="0" cellspacing="0")
    tbody
      tr
        th Id
        th Title
        th Created
        th Modified
        th.actions Actions
      <% _.each(tag.attributes.bookmarks, function(bookmark) { %>
      tr
        td <%= bookmark.attributes.id %>
        td <%= bookmark.attributes.title %>
        td <%= bookmark.dateFormat("created") %>
        td <%= bookmark.dateFormat("modified") %>
        td.actions
          a(href!="#bookmarks/view/<%= bookmark.attributes.id %>") View
          a(href!="#bookmarks/edit/<%= bookmark.attributes.id %>") Edit
          a(href!="#bookmarks/delete/<%= bookmark.attributes.id %>") Delete
      <% }); %>
  <% }; %>